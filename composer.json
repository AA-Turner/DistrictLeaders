{
    "name": "cakephp/app",
    "description": "CakePHP skeleton app",
    "homepage": "https://cakephp.org",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "ext-json": "^1.5",
        "cakephp/authentication": "^1.1",
        "cakephp/authorization": "^1.2",
        "cakephp/cakephp": "^3.7.0",
        "cakephp/migrations": "^2.0.0",
        "cakephp/plugin-installer": "^1.0",
        "dereuromark/cakephp-ajax": "^1.4",
        "dereuromark/cakephp-databaselog": "^2.5",
        "dereuromark/cakephp-dto": "^0.2.6",
        "dereuromark/cakephp-queue": "^4.0",
        "dereuromark/cakephp-tools": "^1.9",
        "friendsofcake/bootstrap-ui": "^1.4",
        "friendsofcake/search": "^5.3",
        "google/apiclient": "^2.0",
        "guzzlehttp/psr7": "^1.5.2",
        "josbeir/cakephp-filesystem": "^1.0",
        "league/flysystem-aws-s3-v3": "^1.0",
        "mobiledetect/mobiledetectlib": "2.*",
        "muffin/footprint": "^1.2",
        "muffin/trash": "^2.1",
        "twilio/sdk": "^5.34"
    },
    "require-dev": {
        "cakephp/bake": "^1.9.0",
        "cakephp/cakephp-codesniffer": "^3.0",
        "cakephp/debug_kit": "^3.17.0",
        "dereuromark/cakephp-ide-helper": "@stable",
        "josegonzalez/dotenv": "3.*",
        "phan/phan": "^2.2",
        "phpunit/php-code-coverage": "^5.3",
        "phpunit/phpunit": "^5|^6",
        "psy/psysh": "@stable"
    },
    "suggest": {
        "markstory/asset_compress": "An asset compression plugin which provides file concatenation and a flexible filter system for preprocessing and minification."
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@console-install",
            "@migrate",
            "@symlink"
        ],
        "post-create-project-cmd": "@console-install",
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump",
        "console-install": "App\\Console\\Installer::postInstall",
        "check": [
            "@test",
            "@cs-check",
            "@validate",
            "@phpstan"
        ],
        "fix": [
            "@cs-fix",
            "@annotate",
            "@code-complete",
            "@phpstorm"
        ],
        "cs-check": "phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/",
        "cs-fix": "phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/ config/",
        "phpstan": [
            "@phpstan-setup",
            "@phpstan-test"
        ],
        "phpstan-test": "phpstan analyse -c tests/phpstan.neon -l 5 src/",
        "phpstan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan && mv composer.backup composer.json",
        "annotate": "bin/cake annotations all && bin/cake illuminator illuminate",
        "phpstorm": "bin/cake phpstorm generate",
        "code-complete": "bin/cake code_completion generate",
        "test": "phpunit --colors=always",
        "migrate": [
            "@migrate-app",
            "@migrate-queue",
            "@migrate-database-log"
        ],
        "migrate-app": "bin/cake migrations migrate",
        "migrate-queue": "bin/cake migrations migrate -p Queue",
        "migrate-database-log": "bin/cake migrations migrate -p DatabaseLog -c database_log --no-lock",
        "symlink": "bin/cake plugin assets symlink"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
